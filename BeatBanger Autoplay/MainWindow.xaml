<Window x:Class="BeatBanger_Autoplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatBanger_Autoplay"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="BeatBanger Autoplayer" Height="250" Width="250" ResizeMode="CanMinimize">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" MinHeight="30"/>
            <RowDefinition Height="3.5*" MinHeight="40"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Reload" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Reload_Click" />
        <TextBox IsReadOnly="True" Grid.Row="1" x:Name="Level_Textblock" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Margin="5"/>
        <TextBox IsReadOnly="True" Grid.Row="2" x:Name="Notes_Textblock" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="5"/>

    </Grid>
</Window>
    
    